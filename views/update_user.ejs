
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Entries</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Entry</h2>
            <span class="text-light">Use the below form to Update an entry</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="Date" class="text-dark">Date</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="date" name="Date" value="<%= user.Date %>" placeholder="Date">
        </div>
        <div class="form-group">
            <label for="DeliveredBottles" class="text-dark">Delivered Bottles</label>
            <input type="Number" name="DeliveredBottles" value="<%= user.DeliveredBottles%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="EmptyReceive" class="text-dark">Empty Receive</label>
            <input type="Number" name="EmptyReceive" value="<%= user.DeliveredBottles%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="BalanceBottles" class="text-dark">Balance Bottles</label>
            <input type="Number" name="BalanceBottles" value="<%= user.BalanceBottles%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="Payment" class="text-dark">Payment</label>
            <input type="Number" name="Payment" value="<%= user.Payment%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="PaymentBalance" class="text-dark">PaymentBalance</label>
            <input type="Number" name="PaymentBalance" value="<%= user.PaymentBalance%>" placeholder="">
        </div>
       

        <div class="form-group">
            <button type="submit" class="btn text-light update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
